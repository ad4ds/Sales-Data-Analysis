START
Input number_of_products
Set maxSales = 0
Set bestProduct = ""

FOR each product from 1 to number_of_products DO
    productCount = productCount + 1
    Input productName
    Input productSales

    IF productSales > maxSales THEN
        maxSales = productSales
        bestProduct = productName
    ELSE
        do nothing
    END IF
END FOR

Display bestProduct
END
